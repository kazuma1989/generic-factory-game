<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Months spent</th>
      <th>Money</th>
      <th>Storage</th>
      <th>Ingredient</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.player.name %></td>
        <td><%= game.month %></td>
        <td><%= number_to_currency(game.money, precision: 0, format: '%u%nK') %></td>
        <td><%= game.storage %></td>
        <td><%= game.ingredient %></td>
        <td><%= game.product %></td>
        <td><%= link_to (0..1000).include?(game.money) ? 'Continue' : 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
